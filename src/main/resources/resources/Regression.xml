<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Regression" parallel="tests" thread-count="10">
    <test name="Footer" parallel="tests" thread-count="10">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="web_automation.tests.global.footer.FooterTest"/>
        </classes>
    </test>
    <test name="Computer order" parallel="tests" thread-count="10">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="web_automation.tests.order.computer.BuyingCheapComputerTest"/>
            <class name="web_automation.tests.order.computer.BuyingStandardComputerTest"/>
        </classes>
    </test>
</suite>